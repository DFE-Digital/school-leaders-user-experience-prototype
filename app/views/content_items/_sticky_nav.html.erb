<div class="grid-row">
  <div class="column-two-thirds">
    <div class="prototype sticky-nav">
      <h2>
        <a href="<%= @page_schema.base_path %>" class="sticky-link">
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="68 68 700 700" class="icon">
            <g id="icomoon-ignore"></g>
            <path fill="currentColor" d="M333.2 384l169.4-169.4c12.4-12.4 12.4-32.8 0-45.2s-32.8-12.4-45.2 0l-192 192c-12.4 12.4-12.4 32.8 0 45.2l192 192c6.2 6.2 14.4 9.4 22.6 9.4s16.4-3.2 22.6-9.4c12.4-12.4 12.4-32.8 0-45.2l-169.4-169.4z"></path>
          </svg>
          <%= page_schema.title %>
        </a>
      </h2>
    </div>
  </div>
</div>

<script>
  $(document).ready( function() {
    var $stickyNav = $(".sticky-nav"),
        stickyNavTopPosition = $stickyNav.offset().top;

    $(window).scroll( function() {
      $stickyNav.toggleClass("sticky", window.scrollY >= stickyNavTopPosition);
    });
  });
</script>
