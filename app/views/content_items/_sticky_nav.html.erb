<div class="pub-c-task-list-header">
  <span class="pub-c-task-list-header__part-of">Part of</span>
    <a href="<%= @page_schema.base_path %>" class="pub-c-task-list-header__title">
      <%= page_schema.title %>
    </a>
    <a href="#task-list-sidebar" class="pub-c-task-list-header__skip-link">
      Skip content
    </a>
</div>

<script>
  $(document).ready( function() {
    var $stickyNav = $(".sticky-nav"),
        stickyNavTopPosition = $stickyNav.offset().top;

    $(window).scroll( function() {
      $stickyNav.toggleClass("sticky", window.scrollY >= stickyNavTopPosition);
    });
  });
</script>
