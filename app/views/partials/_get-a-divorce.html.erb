<ol class="task-list__list">
  <li class="task-list__group <% if on_divorce_step(1, on_sidebar) %>task-list__group--active<% end %>">
    <span class="task-list__number">
      <span class="visuallyhidden">Step</span> 1
    </span>

    <div class="task-list__step js-step" id="check-if-you-can-get-divorced" <% if on_divorce_step(1) %>data-open<% end %>>
      <div class="task-list__header js-toggle-panel">
        <h2 class="task-list__title js-step-title">
          Check if you can get divorced
        </h2>
      </div>

      <div class="task-list__panel js-panel">
        <%= render 'partials/divorce_step1', on_sidebar: on_sidebar %>
      </div>
    </div>
  </li>

  <li class="task-list__group <% if on_divorce_step(2, on_sidebar) %>task-list__group--active<% end %>">
    <span class="task-list__number">
      <span class="visuallyhidden">Step</span> 2
    </span>

    <div class="task-list__step task-list__step--optional js-step" id="make-arrangements-for-your-children-money-and-property" <% if on_divorce_step(2) %>data-open<% end %>>
      <div class="task-list__header js-toggle-panel">
        <h2 class="task-list__title js-step-title">
          Make arrangements for your children, money and property
        </h2>
      </div>

      <div class="task-list__panel js-panel">
        <%= render 'partials/divorce_step2', on_sidebar: on_sidebar %>
      </div>
    </div>
  </li>

  <li class="task-list__group <% if on_divorce_step(3, on_sidebar) %>task-list__group--active<% end %>">
    <span class="task-list__number">
      <span class="visuallyhidden">Step</span> 3
    </span>

    <div class="task-list__step js-step" id="file-for-divorce" <% if on_divorce_step(3) %>data-open<% end %>>
      <div class="task-list__header js-toggle-panel">
        <h2 class="task-list__title js-step-title">
          File for divorce
        </h2>
      </div>

      <div class="task-list__panel js-panel">
        <%= render 'partials/divorce_step3', on_sidebar: on_sidebar %>

        <% if on_sidebar %>
          <div class="task-list__get-help">
            <a href="/services/get-a-divorce#file-for-divorce">Get help completing this step</a>
          </div>
        <% end %>
      </div>
    </div>
  </li>

  <li class="task-list__group <% if on_divorce_step(4, on_sidebar) %>task-list__group--active<% end %>">
    <span class="task-list__number">
      <span class="visuallyhidden">Step</span> 4
    </span>

    <div class="task-list__step js-step" id="send-the-court-more-details-about-your-divorce" <% if on_divorce_step(4) %>data-open<% end %>>
      <div class="task-list__header js-toggle-panel">
        <h2 class="task-list__title js-step-title">
          Send the court more details about your divorce
        </h2>
      </div>

      <div class="task-list__panel js-panel">
        <%= render 'partials/divorce_step4', on_sidebar: on_sidebar %>
      </div>
    </div>
  </li>

  <li class="task-list__group <% if on_divorce_step(5, on_sidebar) %>task-list__group--active<% end %>">
    <span class="task-list__number">
      <span class="visuallyhidden">Step</span> 5
    </span>

    <div class="task-list__step js-step" id="finalise-your-divorce" <% if on_divorce_step(5) %>data-open<% end %>>
      <div class="task-list__header js-toggle-panel">
        <h2 class="task-list__title js-step-title">
          Finalise your divorce
        </h2>
      </div>

      <div class="task-list__panel js-panel">
        <%= render 'partials/divorce_step5', on_sidebar: on_sidebar %>
      </div>
    </div>
  </li>
</ol>
