        </h2>
      </div>

      <% if on_civil_step(2) %>
        <div class="task-list__panel js-panel">
          <%= render 'partials/civilpartnership_step2' %>
        </div>
      <% end %>
    </div>
  </li>

  <li class="task-list__group <% if on_civil_step(3, on_sidebar) %>task-list__group--active<% end %>">
